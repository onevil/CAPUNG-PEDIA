<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".tentangPengembang.tentangAplikasiFragment">

    <ImageView
        android:id="@+id/iv_header_app"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:elevation="2dp"
        android:background="@drawable/header_capung_pediamdpi" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tv_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header_app"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Tentang Aplikasi"
            android:textColor="?attr/textcolor"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/cv_tv_deskripsi"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/tentang_aplikasi"
        android:textAlignment="textStart"
        android:textColor="?attr/textcolor"
        android:textSize="14sp"></TextView>

</RelativeLayout>