<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    tools:context=".tentangPengembang.tentangAplikasiFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_header_app"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:elevation="2dp"
            android:src="@drawable/header_capung_pediamdpi" />

        <TextView
            android:id="@+id/tv_tentang_aplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_header_app"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Tentang Aplikasi"
            android:textColor="?attr/textcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_deskripsi_tentang_aplikasi"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_tentang_aplikasi"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/tentang_aplikasi"
            android:textAlignment="textStart"
            android:textColor="?attr/textcolor"
            android:textSize="14sp"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tv_fotografer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_tv_terimakasih"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="?attr/cardbackground"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_fotografer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Fotografer"
                    android:textColor="?attr/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tv_penulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_tv_fotografer"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="?attr/cardbackground"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_pen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Penulis"
                    android:textColor="?attr/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tv_terimakasih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deskripsi_tentang_aplikasi"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="?attr/cardbackground"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_team" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Ucapan Terimakasih"
                    android:textColor="?attr/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_dikembangkan_oleh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_tv_penulis"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="?attr/textcolor"
            android:fontFamily="@font/montserrat_medium"
            android:text="Aplikasi ini dikembangkan oleh \nIshadiyanto Salim"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dikembangkan_oleh"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/textcolor"
            android:text="Copyright 2020"
            android:textAlignment="center" />
    </RelativeLayout>



</ScrollView>