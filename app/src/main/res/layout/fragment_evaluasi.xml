<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    tools:context=".Evaluasi.EvaluasiFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_evaluasi"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Evaluasi"
        android:background="?attr/cardbackground"
        android:elevation="2dp">

    </androidx.appcompat.widget.Toolbar>
    
    <TextView
        android:id="@+id/tv_pilihSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih soal"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_above="@id/rv_listSoal"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="?attr/textcolor"
        android:textSize="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:itemCount="3"
        tools:listitem="@layout/item_rv_list_soal"
        android:layout_marginTop="10dp"/>
    

</RelativeLayout>