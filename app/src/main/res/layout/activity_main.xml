<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/backgroundcolor">

   <androidx.cardview.widget.CardView
       android:id="@+id/cv"
       android:layout_marginTop="10dp"
       app:cardCornerRadius="10dp"
       app:cardElevation="2dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="15dp"
       app:cardBackgroundColor="?attr/cardbackground"
       android:padding="15dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Test judul"
             android:textColor="?attr/textcolor"
             android:textStyle="bold"
             android:textSize="20sp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas lacinia, ipsum vel malesuada tincidunt, nisi diam lacinia arcu, nec lacinia ex ex at magna. Cras tempus iaculis ligula."
             android:textColor="?attr/textcolor"
             android:textSize="14sp"/>


      </LinearLayout>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/cv2"
       android:layout_below="@+id/cv"
       android:layout_marginTop="10dp"
       app:cardCornerRadius="10dp"
       android:elevation="2dp"
       android:layout_marginHorizontal="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardBackgroundColor="?attr/cardbackground"
       android:padding="15dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Component :"
             android:textColor="?attr/textcolor"
             android:textStyle="bold"
             android:textSize="16sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio Button"
            android:buttonTint="?attr/tintcolor"
            android:textColor="?attr/textcolor"/>

         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="CheckBox"
             android:buttonTint="?attr/tintcolor"
             android:textColor="?attr/textcolor"/>

          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:cardCornerRadius="15dp"
              android:elevation="2dp">
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CheckBox"
                  android:textSize="12sp"
                  android:background="?attr/buttoncolor"
                  android:textColor="#ffffff"/>
          </androidx.cardview.widget.CardView>



      </LinearLayout>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_below="@+id/cv2"
       android:layout_marginTop="10dp"
       app:cardCornerRadius="10dp"
       app:cardElevation="2dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="15dp"
       app:cardBackgroundColor="?attr/cardbackground"
       android:padding="15dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Component :"
             android:textColor="?attr/textcolor"
             android:textStyle="bold"
             android:textSize="16sp"/>
        <Switch
            android:id="@+id/myswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DarkMode"
            android:textColor="?attr/textcolor"/>

      </LinearLayout>

   </androidx.cardview.widget.CardView>

</RelativeLayout>